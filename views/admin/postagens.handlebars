<h2>Posts</h2>
<hr>
<a href="/admin/postagens/add">
<button class="btn btn-success">Novo post</button>
</a>
{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Título: {{this.titulo}}</h4>
            <small>Categoria: {{this.categoria.nome}}</small><br>
            <small>Descrição: {{this.descricao}}</small><br>
            <small>Data: {{this.data}}</small><br>
            <small>Conteudo: {{this.conteudo}}</small>
            <table>
                <tr>
                    <td>
                        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-2">Editar</button></a>
                    </td>
                    <td></td>
                    <td>
                        <form action="/admin/postagens/deletar/" method="POST">
                            <input type="hidden" name="id" value="{{_id}}">
                            <button type="submit" class="btn btn-danger mt-2 ">Deletar post</button>
                        </form>
                    </td>
                </tr>
            </table>
        </div>    
    </div>
{{else}}
    <h4 class="mt-3">Nenhum post cadastrado</h4>
{{/each}}