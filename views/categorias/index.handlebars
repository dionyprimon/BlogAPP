{{#if user}}
<div class="card mt-2">
    <div class="card-body">
        <h1>Cadastro de categorias</h1>
    </div>
</div>

{{!-- Bot√£o para cadastro de novos produto --}}
<a href="/categorias/addcategorias">
<button class="btn btn-success mt-2">Cadastrar nova categoria</button>
</a>

{{#each categorias}}
    <div class="card mt-2">
        <div class="card-body">
            <h4>Nome: {{this.nome}}</h4>
            <small>Slug: {{this.slug}}</small>
            <h1></h1>
            <table>
                <tr>
                    <td>
                        <a href="/categorias/editcat/{{_id}}"><button class="btn btn-success mt-2">Editar</button></a>
                    </td>
                    <td></td>
                    <td>
                        <form action="/categorias/deletacateg" method="POST">
                            <input type="hidden" name="id" value="{{_id}}">
                            <button type="submit" class="btn btn-danger mt-2 ">Deletar categoria</button>
                        </form>
                    </td>
                </tr>
            </table>
        </div>    
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria cadastrada</h4>
{{/each}}




{{else}}

{{/if}}