<h1>{{categoria.nome}}</h1>
<hr>
{{#each postagens}}
    <div class="card mt-2">
        <div class="card-body">
            <h4>Título: {{this.titulo}}</h4>
            <small>Descrição: {{this.descricao}}</small><br>
            <a href="/postagem/{{this.slug}}" ><button class="btn btn-dark mt-2">Leia mais</button></a>
            <hr>
            <small>Data: {{this.data}}</small><br>
        </div>    
    </div>
{{else}}
    <h4 class="mt-3">Nenhum post cadastrado</h4>
{{/each}}