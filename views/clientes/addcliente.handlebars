{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
{{#if user}}
<div class="card mt-2">
    <div class="card-body">
        <h1>Cadastro de clientes</h1>
    </div>
</div>

{{!-- formulário de cadastro do cliente --}}
<div class="card mt-2">
    <div class="card-body">
        <form action="/clientes/novocliente" method="post">
            <label for="nome">Nome: </label>
                <input type="text" name="nome" class="form-control mt-2" required>
            <label for="fone">Telefone: </label>
                <input type="number" name="fone" class="form-control mt-2" required>
            <label for="email">Email: </label>
                <input type="email" name="email" class="form-control mt-2" required>
            <button type="submit" class="btn btn-success mt-4">Cadastrar</button>
        </form>
    </div>
</div>


{{else}}

{{/if}}