{{#if user}}
<div class="card mt-2">
    <div class="card-body">
        <h1>Clientes</h1>
    </div>
</div>

{{!-- BotÃ£o para cadastro de novos clientes --}}
<a href="/clientes/addcliente">
    <button class="btn btn-success mt-2">Cadastrar novo cliente</button>
</a>

{{#each clientes}}
    <div class="card mt-2">
        <div class="card-body">
            <h4>Nome: {{this.nome}}</h4>
            <h1></h1>

            <table>
                <tr>
                    <td>
                        <a href="/clientes/consultacliente/{{_id}}"><button class="btn btn-success mt-2">Ver mais</button></a>
                    </td>
                    <td></td>
                    <td>
                        <a href="/clientes/editcliente/{{_id}}"><button class="btn btn-success mt-2">Editar</button></a>
                    </td>
                    <td></td>
                    <td>
                        <form action="/clientes/deletacliente" method="POST">
                            <input type="hidden" name="id" value="{{_id}}">
                            <button type="submit" class="btn btn-danger mt-2 ">Deletar cliente</button>
                        </form>
                    </td>
                </tr>
            </table>

        </div>    
    </div>
{{else}}
    <div class="card mt-2">
        <div class="card-body">
                <h4 class="mt-3">Nenhum cliente cadastrado</h4>
        </div>
    </div>
{{/each}}




{{else}}

{{/if}}