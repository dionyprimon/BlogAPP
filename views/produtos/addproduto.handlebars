{{else}}

{{/each}}
{{#if user}}
<div class="card mt-2">
    <div class="card-body">
        <h1>Cadastro de produto</h1>
    </div>
</div>

{{!-- formulário de cadastro do produto --}}
<div class="card mt-2">
    <div class="card-body">
        <form action="/produtos/novoproduto" method="post">
            <label for="nome">Nome: </label>
                <input type="text" name="nome" class="form-control mt-2" required>
            <label for="valor">Valor unitário: </label>
                <input type="number" name="valor" class="form-control mt-2" required>
            
            <select name="categoria" class="form-select form-select-lg mt-2" aria-label="">
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma categoria cadastrada</option>
                    {{/each}}
            </select>

            <button type="submit" class="btn btn-success mt-2">Cadastrar</button>

        </form>
    </div>
</div>



{{else}}

{{/if}}