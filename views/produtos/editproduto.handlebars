
{{!-- função que exibe os possíveis alertas de erros --}}
{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
{{#if user}}
<div class="card mt-2">
    <div class="card-body">
        <h1>Edição de produto</h1>
    </div>
</div>

{{!-- formulário de cadastro do usuário --}}
<div class="card mt-2">
    <div class="card-body">
        <form action="/produtos/editaproduto" method="post">
        <input type="hidden" name="id" value="{{produtos._id}}">
            <label for="nome">Nome: </label>
                <input type="text" name="nome" class="form-control mt-2" required value="{{produtos.nome}}">
            <label for="valor">Valor unitário: </label>
                <input type="number" name="valor" class="form-control mt-2" required value="{{produtos.valor}}">

            <select name="categoria" class="form-select form-select-lg mt-2" aria-label="">
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma categoria cadastrada</option>
                    {{/each}}
            </select>
            
            <button type="submit" class="btn btn-success mt-4">Alterar</button>
        </form>
    </div>
</div>



{{else}}

{{/if}}