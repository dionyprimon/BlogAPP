{{!-- PÁGINA DE CRIAÇÃO DE USUÁRIOS DENTRO DO SISTEMA --}}

{{!-- função que exibe os possíveis alertas de erros --}}
{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}


{{#if user}}
<div class="card mt-2">
    <div class="card-body">
        <h1>Cadastro de usuario</h1>
    </div>
</div>

{{!-- formulário de cadastro do usuário --}}
<div class="card mt-2">
    <div class="card-body">
        <form action="" method="post">
            <label for="nome">Nome: </label>
                <input type="text" name="nome" class="form-control mt-2" required>
            <label for="email">Email: </label>
                <input type="email" name="email" class="form-control mt-2" required>
            <label for="senha">Senha: </label>
                <input type="password" name="senha" class="form-control mt-2" required>
            <label for="senha2">Repita a sua senha: </label>
                <input type="password" name="senha2" class="form-control mt-2" required>
            <button type="submit" class="btn btn-success mt-4">Criar conta</button>
        </form>
    </div>
</div>
{{else}}

{{/if}}