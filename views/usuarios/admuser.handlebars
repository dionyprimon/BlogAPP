{{!-- PAGINA INICIAL DE GESTÃO DOS USUÁRIOS --}}


{{#if user}}
{{!-- Titulo --}}
<div class="card">
    <div class="card-body">
        <h1>Lista de usuários</h1>
    </div>
</div>

{{!-- Botão para cadastro de novos usuários --}}
<a href="adminregistro">
<button class="btn btn-success mt-2">Novo usuário</button>
</a>

{{#each usuarios}}
    <div class="card mt-2">
        <div class="card-body">
            <h4>Nome: {{this.nome}}</h4>
            <small>E-mail/Login: {{this.email}}</small>
            <h1></h1>
            <table>
                <tr>
                    <td>
                        <a href="/usuarios/editusuario/{{_id}}"><button class="btn btn-success mt-1">Alterar usuário/senha</button></a>
                    </td>
                    <td></td>
                    <td>
                        <form action="./usuarios/deletar" method="POST">
                            <input type="hidden" name="id" value="{{_id}}">
                            <button type="submit" class="btn btn-danger mt-1 ">Deletar usuário</button>
                        </form>
                    </td>
                </tr>
            </table>
        </div>    
    </div>
{{else}}
    <div class="card mt-2">
        <div class="card-body">
                <h4 class="mt-3">Nenhuma usuário cadastrado</h4>
        </div>
    </div>
{{/each}}


{{else}}

{{/if}}