{{!-- PÁGINA DE EDIÇÃO DOS DADOS E SENHA DO USUÁRIO --}}


{{!-- função que exibe os possíveis alertas de erros --}}
{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

{{#if user}}
<div class="card mt-2">
    <div class="card-body">
        <h1>Editar usuario</h1>
    </div>
</div>

{{!-- formulário de alteração do usuário --}}
<div class="card mt-2">
    <div class="card-body">
        <form action="/usuarios/editusuario/" method="post">
            <input type="hidden" name="id" value="{{usuario._id}}">
            <label for="nome">Nome: </label>
                <input type="text" name="nome" class="form-control mt-2" required value="{{usuario.nome}}">
            <label for="email">Email: </label>
                <input type="email" name="email" class="form-control mt-2" required value="{{usuario.email}}">
            <label for="senha">Senha: </label>
                <input type="password" name="senha" class="form-control mt-2" required>
            <label for="senha2">Repita a sua senha: </label>
                <input type="password" name="senha2" class="form-control mt-2" required>
            <button type="submit" class="btn btn-success mt-4">Salvar alterações</button>
        </form>
    </div>
</div>



{{else}}

{{/if}}